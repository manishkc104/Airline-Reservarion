@model AirlineReservation.Models.FlightFareViewModel


<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="header">
                <h4 class="title">Assign Seat to Flight</h4>
            </div>
            <div class="content">
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Flight Number</label>
                                @Html.DropDownListFor(m => m.FlightID, Model.ListFlight, "Select..", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FlightID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Route</label>
                                @Html.DropDownListFor(m => m.RouteID, Model.ListRoute, "Select..", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RouteID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Class</label>
                                @Html.DropDownListFor(m => m.ClassID, Model.ListClass, "Select..", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ClassID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Passenger Type</label>
                                @Html.DropDownListFor(m => m.PassengerTypeID, Model.ListPassengerType, "Select..", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.PassengerTypeID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Amount</label>
                                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @placeholder = "No Of seats" })
                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Allowed Baggage</label>
                                @Html.TextBoxFor(m => m.AllowedBaggage, new { @class = "form-control", @placeholder = "No Of seats" })
                                @Html.ValidationMessageFor(model => model.AllowedBaggage, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info btn-fill pull-right">Save</button>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



