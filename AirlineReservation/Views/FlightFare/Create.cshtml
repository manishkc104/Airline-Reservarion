@model AirlineReservation.Models.FlightFareViewModel


<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="content-inner">
            <section class="forms">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <!-- Form Elements -->
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">Assign Seat to Flight</h3>
                                    </div>
                                    <div class="card-body">

                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Flight Number</label>
                                            <div class="col-sm-9">
                                                @Html.DropDownListFor(m => m.FlightID, Model.ListFlight, "Select..", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FlightID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Route</label>
                                            <div class="col-sm-9">
                                                @Html.DropDownListFor(m => m.RouteID, Model.ListRoute, "Select..", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.RouteID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Class</label>
                                            <div class="col-sm-9">
                                                @Html.DropDownListFor(m => m.ClassID, Model.ListClass, "Select..", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.ClassID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Passenger Type</label>
                                            <div class="col-sm-9">
                                                @Html.DropDownListFor(m => m.PassengerTypeID, Model.ListPassengerType, "Select..", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.PassengerTypeID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Amount</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", @placeholder = "No Of seats" })
                                                @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Allowed Baggage</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.AllowedBaggage, new { @class = "form-control", @placeholder = "No Of seats" })
                                                @Html.ValidationMessageFor(model => model.AllowedBaggage, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                       
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <button type="submit" class="btn btn-secondary"><a href="~/FlightFare" style="text-decoration:none;color:white">Cancel</a></button>
                                                <button type="submit" class="btn btn-primary" value="Create">Create</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

