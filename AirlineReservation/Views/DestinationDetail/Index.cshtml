@model IEnumerable<Entities.tblDestinationDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="col-lg-12">
            <section class="tables">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header d-flex align-items-center">
                                    <h3 class="h4">@Html.ActionLink("Add New Sub Destination", "Create")</h3>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Destination Title
                                                    </th>
                                                    <th>
                                                        Famous Places
                                                    </th>
                                                    <th>
                                                        image
                                                    </th>
                                                    <th>
                                                        Description
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    //var item = Model.ToList()[i];
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.tblDestination.title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.image)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.description)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn" })
                                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn" })
                                                        </td>
                                                    </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>


