<section>
    <div class="container">
        <div class="awe-search-tabs tabs">
            <ul>
                <li>
                    <a href="#tab-flight">
                        <i class="awe-icon awe-icon-plane"></i>
                    </a>
                </li>

            </ul>
            <div class="awe-search-tabs__content tabs__content">
                <div id="tab-flight" class="search-flight">
                    <h2>Search Flight</h2>
                    <form action="/SearchFlight/Search" method="post">
                        <div class="form-group">
                            <div class="form-elements">
                                <label>From</label>
                                <div class="form-item">
                                    <i class="awe-icon awe-icon-marker-1"></i>
                                    <input id="From" name="From" type="text" value="" placeholder="From" required autocomplete="off">
                                </div>
                            </div>
                            <div class="form-elements">
                                <label>To</label>
                                <div class="form-item">
                                    <i class="awe-icon awe-icon-marker-1"></i>
                                    <input id="To" name="To" type="text" value="" placeholder="To" required autocomplete="off">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-elements">
                                <label>Depart on</label>
                                <div class="form-item">
                                    <i class="awe-icon awe-icon-calendar"></i>
                                    <input id="Depart" name="Depart" type="text" class="awe-calendar" value="" required placeholder="Check In" autocomplete="off">
                                </div>
                            </div>
                            <div class="form-elements" id="fldReturn">
                                <label>Return on</label>
                                <div class="form-item">
                                    <i class="awe-icon awe-icon-calendar"></i>
                                    <input id="Return" name="Return" type="text" class="awe-calendar" value="" placeholder="Check out" autocomplete="off">
                                </div>
                            </div>
                            <div class="form-elements">
                                <label>Adult</label>
                                <div class="form-item">
                                    <select class="awe-select" name="Adult" required autocomplete="off">
                                        <option value="">Select..</option>
                                        @for (int i = 1; i <= 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <span>12 yo and above</span>
                            </div>
                            <div class="form-elements">
                                <label>Childs</label>
                                <div class="form-item">
                                    <select class="awe-select" name="Child" autocomplete="off">
                                        <option value="">
                                            Select..
                                        </option>
                                        @for (int i = 1; i <= 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                                <span>0-11 yo</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-elements">
                                <label>Trip</label>
                                <div class="form-item">
                                    <select class="awe-select" name="FlightType" id="FlightType" required autocomplete="off">
                                        <option value="">Select..</option>
                                        <option value="1">One Way</option>
                                        <option value="2">Round Trip</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <input type="submit" value="Find My Flight">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
