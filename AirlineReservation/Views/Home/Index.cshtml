<script>
    $(document).ready(function (e) {
        EnableDisableTrip();

        $('#FlightType').change(function (e) {
            EnableDisableTrip();
        });
    });

    var EnableDisableTrip = function (e) {
        if ($('#FlightType').val() == "1") {
            //$('#Return').attr("disabled", "disabled");
            $("#fldReturn").hide();

            $('#Return').removeProp("required");
        }
        else {
            //$('#Return').removeAttr("disabled");
            $("#fldReturn").show();
            $('#Return').prop('required', true);
        }
    };
</script>