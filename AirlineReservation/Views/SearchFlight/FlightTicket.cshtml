    <h1 style="text-align:center;">Flight Ticket</h1>
    <button class="btn btn-primary pull-right" id="btnprint" style="margin-right:30px;margin-top:20px;font-size:20px;">Print</button>

    <div class="box" id="printarea" style="position:relative">
        <div class="col-md-6">

            @foreach (var item in Model)
            {
                <div style="position:relative;margin-bottom:20px;width: 600px;
    height: 250px;
    background: #FFB300;
    border-radius: 3px;
    box-shadow: 0 0 100px #aaa;
    border-top: 1px solid #E89F3D;
    border-bottom: 1px solid #E89F3D;">
                    <span class="airline">@item.FlightNumber</span>
                    <span class="airline airlineslip">@item.FlightNumber</span>
                    <span class="boarding">Boarding pass</span>
                    <div class="content">
                        <span class="jfk">@item.From</span>
                        <span class="plane">
                            <?xml version="1.0" ?>
                            <svg clip-rule="evenodd" fill-rule="evenodd" height="60" width="60" image-rendering="optimizeQuality" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg"><g stroke="#222"><line fill="none" stroke-linecap="round" stroke-width="30" x1="300" x2="55" y1="390" y2="390" /><path d="M98 325c-9 10 10 16 25 6l311-156c24-17 35-25 42-50 2-15-46-11-78-7-15 1-34 10-42 16l-56 35 1-1-169-31c-14-3-24-5-37-1-10 5-18 10-27 18l122 72c4 3 5 7 1 9l-44 27-75-15c-10-2-18-4-28 0-8 4-14 9-20 15l74 63z" fill="#222" stroke-linejoin="round" stroke-width="10" /></g></svg>
                        </span>
                        <span class="sfo">@item.To</span>

                        <span class="jfk jfkslip">@item.From</span>
                        <span class="plane planeslip">
                            <?xml version="1.0" ?>
                            <svg clip-rule="evenodd" fill-rule="evenodd" height="50" width="50" image-rendering="optimizeQuality" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg"><g stroke="#222"><line fill="none" stroke-linecap="round" stroke-width="30" x1="300" x2="55" y1="390" y2="390" /><path d="M98 325c-9 10 10 16 25 6l311-156c24-17 35-25 42-50 2-15-46-11-78-7-15 1-34 10-42 16l-56 35 1-1-169-31c-14-3-24-5-37-1-10 5-18 10-27 18l122 72c4 3 5 7 1 9l-44 27-75-15c-10-2-18-4-28 0-8 4-14 9-20 15l74 63z" fill="#222" stroke-linejoin="round" stroke-width="10" /></g></svg>
                        </span>
                        <span class="sfo sfoslip">@item.To</span>
                        <div class="sub-content">
                            @*<span class="watermark">Lufthansa</span>*@
                            <span class="name">PASSENGER NAME<br /><span>@item.PassengerName</span></span>
                            <span class="flight">CLASS<br /><span>@item.Class</span></span>
                            <span class="seat">@item.PassengerType</span>
                            @*<span class="gate">GATE<br /><span>11B</span></span>
                                <span class="seat">SEAT<br /><span>45A</span></span>*@


                            <span class="boardingtime">BOARDING TIME<br /><span>@(item.DepartureDate.ToString("dd dddd, MMM yyyy"))</span></span>
                            <span class="flight flightslip">Class<br /><span>@item.Class</span></span>
                            @*<span class="seat seatslip">SEAT<br /><span>45A</span></span>*@
                            <span class="adult">ALLOWED BAGGAGE<br /><span>@item.AllowedBaggage</span></span>
                            <span class="name nameslip">PASSENGER NAME<br /><span>@item.PassengerName</span></span>
                        </div>
                    </div>
                    <div class="barcode"></div>
                    <div class="barcode slip"></div>
                </div>
            }
        </div>
    </div>
    <script type="text/javascript">
        $("#btnprint").click(function () {


        $("#printarea").show();
