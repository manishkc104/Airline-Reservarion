@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Entities.tblRoute>
@{
                /**/

                ViewBag.Title = "Index";
}
<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="col-lg-12">
            <section class="tables">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header d-flex align-items-center">
                                    <h3 class="h4">@Html.ActionLink("Add New Route", "Create")</h3>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Departure
                                                    </th>
                                                    <th>
                                                        Arrival
                                                    </th>
                                                    <th>

                                                        Departure Short
                                                    </th>
                                                    <th>
                                                        Arrival Short
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (Entities.tblRoute item in Model)
                                                {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Departure)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Arrival)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.DepartureShort)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ArrivalShort)
                                                    </td>
                                                    <td>
                                                        <a href='@Url.Action("Edit", "Route" , new { id = item.ID })' class="btn btn-info">Edit</a>
                                                        <a href='@Url.Action("Delete", "Route" , new { id = item.ID })' class="btn btn-danger">Delete</a>

                                                </tr>

                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>