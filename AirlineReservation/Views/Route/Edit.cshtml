@model AirlineReservation.Models.RouteViewModel


<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="content-inner">
            <section class="forms">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <!-- Form Elements -->
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">Edit Product</h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Departure</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.Departure, new { @class = "form-control", @placeholder = "Departure" })
                                                @Html.ValidationMessageFor(model => model.Departure, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Arrival</label>
                                            <div class="col-sm-9">
                                                @Html.TextAreaFor(m => m.Arrival, new { @class = "form-control", @placeholder = "Arrival" })
                                                @Html.ValidationMessageFor(model => model.Arrival, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Departure Short</label>
                                            <div class="col-sm-9">
                                                @Html.TextAreaFor(m => m.DepartureShort, new { @class = "form-control", @placeholder = "Departure" })
                                                @Html.ValidationMessageFor(model => model.DepartureShort, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Arrival Short</label>
                                            <div class="col-sm-9">
                                                @Html.TextAreaFor(m => m.ArrivalShort, new { @class = "form-control", @placeholder = "Arrival" })
                                                @Html.ValidationMessageFor(model => model.ArrivalShort, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>

                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <button type="submit" class="btn btn-secondary"><a href="/Route" style="text-decoration:none;color:white">Cancel</a></button>
                                                <button type="submit" class="btn btn-primary" value="Edit">Edit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

