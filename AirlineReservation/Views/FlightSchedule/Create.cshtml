@model AirlineReservation.Models.FlightScheduleViewModel


<link href="~/Content/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="~/Scripts/datetime/jquery.datetimepicker.full.js"></script>

<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="content-inner">
            <section class="forms">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <!-- Form Elements -->
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">Schedule Flight</h3>
                                    </div>
                                    <div class="card-body">

                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Flight Number</label>
                                            <div class="col-sm-9">
                                                @Html.DropDownListFor(m => m.FlightID, Model.ListFlight, "Select..", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FlightID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Route</label>
                                            <div class="col-sm-9">
                                                @Html.DropDownListFor(m => m.RouteID, Model.ListRoute, "Select..", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.RouteID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Departure Date</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.DepartureDateTime, new { @class = "form-control", @placeholder = "DepartureDateTime" })
                                                @Html.ValidationMessageFor(model => model.DepartureDateTime, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Arrival Date</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.ArrivalDateTime, new { @class = "form-control", @placeholder = "Arrival Date Time" })
                                                @Html.ValidationMessageFor(model => model.ArrivalDateTime, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        
                                       
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <button type="submit" class="btn btn-secondary"><a href="/FlightSchedule" style="text-decoration:none;color:white">Cancel</a></button>
                                                <button type="submit" class="btn btn-primary" value="Create">Create</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>
<script>
    $(document).ready(function (e) {
        $("#ArrivalDateTime").datetimepicker();
        $("#DepartureDateTime").datetimepicker();
    });
</script>

