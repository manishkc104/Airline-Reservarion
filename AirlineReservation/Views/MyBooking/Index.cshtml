@model List<AirlineReservation.Models.BookingViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}

<h2>My Booking</h2>
<table class="table table-striped">
    <thead>

        <tr>      
            <th>
                Booking Id
            </th>
            <th>
                Booking Date
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.BookId
                </td>
                <td>
                    @item.BookingDate
                </td>
                <td>
                    <a href='@Url.Action("FlightTicket", "SearchFlight" , new { bookId = item.BookId })' class="btn btn-info">View Detail</a>
                    <a href='@Url.Action("Delete", "MyBooking" , new { bookId = item.BookId })' onclick="return Confirm('Are you sure you want to cancel Booking?');" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

