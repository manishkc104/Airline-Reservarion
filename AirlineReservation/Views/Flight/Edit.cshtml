@model AirlineReservation.Models.FlightViewModel


<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="content-inner">
            <section class="forms">
                <div class="container-fluid">
                    @using (Html.BeginForm("Edit", "Flight", FormMethod.Post, new { id = "frmEdit", enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <!-- Form Elements -->
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header d-flex align-items-center">
                                        <h3 class="h4">Edit Flight</h3>
                                    </div>
                                    <div class="card-body">
                                        @Html.HiddenFor(m => m.ID)
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Flight No</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.FlightNo, new { @class = "form-control", @placeholder = "Flight No." })
                                                @Html.ValidationMessageFor(model => model.FlightNo, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Flight Name</label>
                                            <div class="col-sm-9">
                                                @Html.TextBoxFor(m => m.FlightName, new { @class = "form-control", @placeholder = "Flight Name" })
                                                @Html.ValidationMessageFor(model => model.FlightName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="form-group row">
                                            <label class="col-sm-3 form-control-label">Flight Detail</label>
                                            <div class="col-sm-9">
                                                @Html.TextAreaFor(m => m.Detail, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="line"></div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Flight Logo</label>
                                                    <div class="col-md-10">
                                                        @Html.TextBoxFor(model => model.FileFlightLogo, new { @Type = "file", @accept = "image/gif, image/jpeg,image/png" })
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md-2">
                                                    </div>
                                                    <div class="col-md-10">
                                                        <img id="imgFlightLogo" style="height:100px;width:100px;" src="/FlightImages/@Model.FlightLogo" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-4">
                                                <button type="submit" class="btn btn-secondary"><a href="~/Flight" style="text-decoration:none;color:white">Cancel</a></button>
                                                <button type="submit" class="btn btn-primary" value="Edit">Edit</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>

@*@section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }*@


<script type="text/javascript">
    $(document).ready(function (e) {
        $("#FileFlightLogo").change(function () {
            if (this.files && this.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgFlightLogo').attr('src', e.target.result);
                }
                reader.readAsDataURL(this.files[0]);
            }
        });
    });
</script>


