@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Entities.tblFlight>

@{
    ViewBag.Title = "Index";
}

<div class="page">
    <div class="page-content d-flex align-items-stretch">
        <div class="col-lg-12">
            <section class="tables">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header d-flex align-items-center">
                                    <h3 class="h4">@Html.ActionLink("Add New Flight", "Create")</h3>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Flight Number
                                                    </th>
                                                    <th>
                                                        Flight Name
                                                    </th>
                                                    <th>
                                                        Flight Logo
                                                    </th>
                                                    <th>
                                                        Flight Detail
                                                    </th>
                                                    <th>
                                                        Action
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                { //var item = Model.ToList()[i];
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FlightNo)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.FlightName)
                                                        </td>
                                                        <td>
                                                            <img style="height:100px;width:100px;" src="/FlightImages/@item.FlightLogo" />
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Detail)
                                                        </td>
                                                        <td>

                                                            <a href='@Url.Action("Edit", "Flight" , new { id = item.ID })' class="btn btn-info">Edit</a>
                                                            <a href='@Url.Action("Delete", "Flight" , new { id = item.ID})' class="btn btn-danger">Delete</a>

                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <!-- PAGINATION -->
                                        <!-- END / PAGINATION -->

                                    </div>
                                </div>
                            </div>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page}))
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>

